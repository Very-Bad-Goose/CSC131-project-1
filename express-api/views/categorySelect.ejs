<%- include('header') %>
<style>
/* Button */
.dropbtn {
  background-color: #04AA6D;
  color: white;
  padding: 16px;
  font-size: 16px;
  border: none;
}

.dropdown {
  position: relative;
  display: inline-block;
}

/* Dropdown Content */
.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f1f1f1;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}
/* Links */
.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

/* Show dropdown menu and change color on hover */
.dropdown-content a:hover {background-color: #ddd;}

.dropdown:hover .dropdown-content {display: block;}

.dropdown:hover .dropbtn {background-color: #3e8e41;}

/* Global styles */
    body {
      font-family: sans-serif;
      background-color: white;
      margin: 0;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      overflow-x: hidden; 
      padding: 0;

      flex-direction: column;

    }

    /* Header strip */
    .header-strip {
      background-color: darkblue;
      color: white;
      padding: 40px;
      width: 100%;
      position: relative;
      box-sizing: border-box;

    }

    .header-strip img {
      width: auto;
      height: auto;
      max-width: 160px;
      max-height: 80px;
      margin: -40px 0 0 0;
      position: absolute;
    }

    .back-arrow {
      position: absolute;
      top: 120px; /* Adjusted position */
      left: 10px;
    }

    .back-arrow img {
      width: 50px;
      height: 50px;
      position: relative;
    }

    /* Shop items */
    .shop-item {
      margin: 20px;
      padding: 20px;
      border: 1px solid #ddd;
      box-sizing: border-box;
      text-align: center;
      width: 25%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .item-image {
      max-width: 100%;
      height: auto;
      margin-bottom: 10px;
      max-height: 200px;
    }

    .item-title {
      margin-top: auto;
    }

    .item-button {
      margin-top: auto;
    }

    .quantity-control {
      display: flex;
      justify-content: space-around;
      align-items: center;
      width: 60%;
      margin-top: 10px;
    }

    .quantity-control button {
      padding: 5px 10px;
      font-size: 16px;
      cursor: pointer;
    }

    .quantity-input {
      width: 40px;
      text-align: center;
      font-size: 16px;
    }

    .inventory-container {
      display: flex;
      justify-content: flex-start;
      flex-wrap: wrap;
      margin: 0 -10px; /* Add negative margin to counteract padding */
      margin-left: 20px; /* Add left margin for the content */
      margin-right: 20px;
  }
  .inventory-heading{
      margin: 15px 0px 15px 25px;
  }
  
  .inventory {
      flex: 0 0 calc(33.33% - 20px); /* Adjust the width to accommodate margins */
      max-width: 275px;
      margin: 20px 10px; /* Apply proper spacing */
      padding: 15px;
      border: 1px solid #ccc;
      border-radius: 8px;
      text-align: center;
      transition: transform 0.3s ease;
      background-color: rgba(255, 255, 255, 0.947);
      box-sizing: border-box;
  }
  
  .inventory img {
      max-width: 100%;
      height: auto;
      border-radius: 5px;
      width: 100%; /* Set the width to fill the container */
  }
  .inventory h4 {
      margin-top: 10px;
      font-size: 18px;
  }
  
  .add-to-cart-section {
      display: flex;
      align-items: center;
      justify-content: flex-start; /* Align items in the section to the start */
      
  }
  
  .quantity-input {
      width: 80px;
      margin-right: 10px;
      padding: 8px;
      text-align: center;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
  }
  
  .add-to-cart-btn {
      padding: 10px 20px;
      font-size: 16px;
      line-height: 1;
      height: auto;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-right: 5px;
      margin-left: 5px; /* Add left margin for spacing */
      align-self: flex-end;
  }
  
  .add-to-cart-btn:hover {
      background-color: #0056b3;
  }
  
  .inventory:hover {
      transform: translateY(-5px);
  }
    
  .inventory-list:hover {
    border-color: darkblue; /* Change border color on hover */
}

.inventory-heading{
    font-weight: 800;
    margin-left: 13px;
    color:  darkblue;
}

.center-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
}
.inventory-wrapper {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.inventory-list {
    text-align: center;
    margin: 30px;
     /* Adjust this height value as needed */
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 250px;
    
}
.inventory-list img:hover {
    transform: scale(1.05); /* Scale the image size on hover */
    transition: transform 0.3s ease; /* Add a smooth transition */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Adjust the shadow on hover */
    filter: brightness(95%); /* Reduce brightness on hover (makes it darker) */
}

.inventory-list img {
    width: 100%;
    height: 185px; /* Set a fixed height for all images */
    object-fit: cover; /* Maintain image aspect ratio */
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow effect */
   
}


.inventory-list h3 {
    font-size: 20px;
    color: darkblue;
    margin: 10px;
    
}

/* Sign up details */
.sign-up-details {
  text-align: center;
}

.sign-up-details h1 {
  font-size: 24px;
  font-weight: bold;
}

.sign-up-details p {
  font-size: 16px;
}

/* Login form */
.login-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100px;
}

.login-form input {
  width: 300px;
  padding: 10px;
  margin-bottom: 10px;
}

.login-form button {

  padding: 10px 20px;
  font-size: 16px;
  line-height: 1;
  height: auto;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  margin-right: 5px;
  margin-left: 5px; /* Add left margin for spacing */
}

.login-form button:hover {
  background-color: #0056b3;
}

/* Error messages */
.error-message {
  color: red;
  font-size: 12px;
  text-align: center; /* Added to center the error message */
}

/* Forget password button */
.forget-password-button {
  text-align: right;
  margin-top: 10px;
}


@media only screen and (max-width: 600px) {
  main {
    padding: 10px;
  }

.login-form input {
width: 100%;
}

.header-strip img {
width: 90px;
height: 100px;
}
}

.cart-icon {
  position: absolute;
  left: 95%;
  bottom: 15%;
}
.cart-icon img {
  position: relative;
  height: 50px;
  width: auto;
}


.cart-container {
  width: auto;
  height: auto;
  max-width: 100%;
  margin: 20px; /* Apply proper spacing */
  padding: 15px;
  border: 1px solid #ccc;
  border-radius: 8px;
  transition: transform 0.3s ease;
  background-color: rgba(255, 255, 255, 0.947);
  box-sizing: border-box;
  font-size: 18px;
}

.cart-container img {
  height: auto;
  width: auto;
  border-radius: 5px;
  max-width: 14%;
}
</style>
