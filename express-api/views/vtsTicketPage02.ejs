<%- include('header') %>
        <!-- Header-->
        <header class="pt-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center">
                    <h1 class="display-4 fw-bolder">Ticket Details</h1>
                </div>
                
            </div>
        </header>
        <!-- Section-->
        <main>
            <section>
                <div class="container mt-5">
                    <div class="d-flex justify-content-between align-items-center mt-5">
                        <a href="/tickets" class="btn btn-primary">Back to All Tickets</a>
                    </div>
                    <div class="card mt-4">
                        <div class="card-header d-flex justify-content-between">
                            <h5 class="card-title">Ticket ID: <%= data.id %></h5>
                            <div class="d-flex justify-content-end align-items-center">
                                <div style="margin-right:.4rem;">
                                    <form action="/tickets/modify" method="GET">
                                        <input type="hidden" name="id" value="<%= data.id %>">
                                        <button type="submit" class="btn btn-secondary">Modify</button>
                                    </form>
                                </div>
                                
                                <form action="/tickets/delete" method="POST">
                                    <input type="hidden" name="id" value="<%= data.id %>">
                                    <button type="submit" onclick="confirmDelete()" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                            
                        </div>
                        
                        <div class="card-body">
                            <!-- <h5 class="card-title">Ticket ID: <%= data.id %></h5> -->
                            <p class="card-text">Timestamp: <%= data.created_at %></p>
                            <p class="card-text">Requested By: <%= data.requestedby %></p>
                            <p class="card-text">Receiver: <%= data.receiver %></p>
                            <p class="card-text">Contents: <%= data.contents %></p>
                            <p class="card-text">Approval Status: <%= data.app_status %></p>
                            <p class="card-text">Notes: <%= data.notes %></p>
                            <p class="card-text">Department: <%= data.dept %></p>
                        </div>
                    </div>
                    <!-- <a href="/tickets" class="btn btn-primary">Back to All Tickets</a> -->
                </div>
            </section>
        </main>
        
        <!-- Footer-->
        <footer class="py-5">
            <!-- <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Valley Tech Systems</p></div> -->
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
        <script>
            function confirmDelete() {
                if (confirm('Are you sure you want to delete this item?')) {
                    document.getElementById('deleteForm').submit();
                }
            }
        </script>
    </body>
</html>
